<!DOCTYPE html>
<html lang="en">
<head>
    <title>My To Do List</title>
</head>
<body>
    <h1>My To Do List</h1>
    <a href="/tasks/new">Add Task</a>
    <ul>
        <% tasks.forEach(task => { %>
            <li>
                <a href="/tasks/<%= task._id %>"><%= task.title %></a>
                (<a href="/tasks/<%= task._id %>/edit">Edit</a>)
                <form action="/tasks/<%= task._id %>?_method=DELETE" method="POST">
                    <button type="submit">Delete</button>
                </form>
            </li>
        <% }) %>
    </ul>
</body>
</html>
